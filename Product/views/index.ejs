<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <a href="/create"
        class="block text-sm font-medium text-gray-700 mb-4 px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 w-max justify-center mx-auto item-center">
        Add Movie
    </a>
    <%- include('Header'); -%>


        <div class="container mx-auto p-4">
            <h1 class="text-2xl font-bold mb-4">Movie List</h1>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <% movies.forEach(movie=> { %>
                    <div class="border border-gray-300 rounded-md shadow-sm p-4">
                        <img src="/uploads/<%= movie.image %>" alt="<%= movie.title %>"
                            class="w-full h-48 object-cover mb-4 rounded-md">
                        <h2 class="text-lg font-semibold mb-2">
                            <%= movie.title %> (<%= movie.releaseYear %>)
                        </h2>
                        <p class="text-gray-700 mb-2">
                            <%= movie.description %>
                        </p>
                        <p class="text-gray-900 font-bold mb-4">Director: <%= movie.director %>
                        </p>
                        <a href="/edit/<%= movie._id %>"
                            class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">Edit</a>
                        <form action="/delete/<%= movie._id %>" method="POST" class="inline-block">
                            <button type="submit"
                                class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700">Delete</button>
                        </form>
                    </div>
                    <% }) %>
            </div>
</body>

</html>