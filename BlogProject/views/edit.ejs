<%- include('partials/header') %>

    <div class="page-header">
        <h1 class="page-title">Edit Story</h1>
        <a href="/" class="btn btn-secondary">‚Üê Back to Home</a>
    </div>

    <div class="form-container">
        <form action="/edit/<%= blog.id %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" required value="<%= blog.title %>">
            </div>

            <div class="form-group">
                <label for="image">Update Cover Image (Optional)</label>
                <% if (blog.image) { %>
                    <div style="margin-bottom: 1rem;">
                        <p style="font-size: 0.85rem; color: #6B7280; margin-bottom: 0.5rem;">Current Image:</p>
                        <img src="<%= blog.image %>" alt="Current cover"
                            style="max-height: 150px; border-radius: 0.5rem;">
                    </div>
                    <% } %>
                        <input type="file" id="image" name="image" accept="image/*">
                        <p style="font-size: 0.8rem; color: #6B7280; margin-top: 0.25rem;">Leave empty to keep the
                            current image.</p>
            </div>

            <div class="form-group">
                <label for="content">Content</label>
                <textarea id="content" name="content" required><%= blog.content %></textarea>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-success" style="flex: 1; padding: 0.75rem;">Save Changes</button>
                <a href="/" class="btn btn-secondary" style="padding: 0.75rem;">Cancel</a>
            </div>
        </form>
    </div>

    <%- include('partials/footer') %>