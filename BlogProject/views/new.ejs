<%- include('partials/header') %>

    <div class="page-header">
        <h1 class="page-title">Create New Story</h1>
        <a href="/" class="btn btn-secondary">‚Üê Back to Home</a>
    </div>

    <div class="form-container">
        <form action="/new" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" required placeholder="Give your story a catchy title...">
            </div>

            <div class="form-group">
                <label for="image">Cover Image (Optional)</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>

            <div class="form-group">
                <label for="content">Content</label>
                <textarea id="content" name="content" required placeholder="Write your story here..."></textarea>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary" style="flex: 1; padding: 0.75rem;">Publish Story</button>
            </div>
        </form>
    </div>

    <%- include('partials/footer') %>